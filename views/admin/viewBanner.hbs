<main class="main" id="main">
  <h3 class="text-primary">View Banner</h3>
  <div class="text-end me-5">
    <p>click here to add new Banner</p>
    <a class=" text-primary" href="/admin/addBanner"> Add banner &nbsp;
      <i class="fa-solid fa-circle-plus fs-"></i></a>
    <hr>
    <br>
  </div>
  <hr>
  <section class="section">
    <div class="row">
      {{#each banner}}
      <div class="col-lg-10">
        <div class="card" >
          <img class="card-img-top" src="/pictures/bannerImages/{{this.image}}" alt="Card image cap" style="height:200px ;">
          <div class="card-body">
            <p class="card-text">{{this.bannerName}}</p>
              <div class="text-center">
               <td class="p-3 "><a class="fa-solid fa-pen-to-square fs-5"  href="/admin/editBanner/{{this._id}}"></a>
                &nbsp;
                &nbsp;
                <a href="/admin/deleteBanner/{{this._id}}" class="fa-solid fa-trash text-danger fs-5"
                  onclick="return confirm('Are you sure you want to delete {{this.name}} ?')"></a>
              </td>
        </div>
          </div>
        </div>
      </div>
       {{/each}}
    </div>
  </section>
 

</main>

