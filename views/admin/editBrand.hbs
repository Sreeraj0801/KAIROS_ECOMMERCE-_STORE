<main id="main" class="main">
  <section>
    <h3 class="text-primary  mb-5 fw-bold">Edit Brand</h3>
    <hr>
    <div class="container">

      <form action="/admin/editBrand/{{brand._id}}" enctype="multipart/form-data" method="post">
        <div class="row mb-3">
          <label for="inputText" class="col-sm-2  col-form-label">Brand</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="brand" value="{{brand.brand}}" id="brandNameField"
              onkeyup="checkForm()" required>
            <p id="errMsg" class="text-danger"></p>
          </div>
          <script>
            function checkForm() {
              document.getElementById('errMsg').innerHTML = ""
              brandName = document.getElementById('brandNameField').value
              brandName = brandName.trim();
              if (brandName == "" || brandName == null) {
                document.getElementById('errMsg').innerHTML = "field cannot be blank"
              }
            }
          </script>

        </div>
        <div class="row mb-3">
          <label for="inputText" class="col-sm-2  col-form-label">Brand Image</label>

          <div class="col-md-2">
            <div style="display: block;" id="imageShow"><img id="imageView" src="/pictures/brandImages/{{brand.image}}" alt="" style="width:200px; height: 200px;">
            </div>
          </div>
          <div class="col-sm-3">
            <h6></h6>
            <input class="form-control p-5 m-5 text-warning" type="file" id="formFile" name="image"
              value="" accept="image/gif, image/jpeg, image/png" onchange="viewImage(event)">
          </div>
        </div>
<script>
  function viewImage(event) {
    document.getElementById('imageView').src = URL.createObjectURL(event.target.files[0])
  }
</script>
       
        <div class="col-sm-10 text-center">
          <button type="submit" class="btn btn-primary">Submit Form</button>
        </div>
    </div>
    </form>



    </div>
  </section>
</main>