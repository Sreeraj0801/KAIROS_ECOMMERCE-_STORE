<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    $('#passwordForm').submit((e)=>{
        e.preventDefault()
        $.ajax({
            url:'/updatePassword',
            method:'post',
            data:$('#passwordForm').serialize(),
            success:(response)=>{
                if(response.passwordMatch)
                {
                    document.getElementById('errMsg').innerHTML = "Password doesnt match"
                }
                else if(response.passwordUpdated)
                {
                    swal("Password changed succesfully!", "Please Login!", "success").then(()=>{
                        location.href='/login'
                    })
                }
                
            }
        })
    })
</script>

