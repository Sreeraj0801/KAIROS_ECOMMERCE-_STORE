<script>



    $('#forgetMobile').submit((e)=>{
        e.preventDefault()
        $.ajax({
            url: '/mobileNumber',
            data: $('#forgetMobile').serialize(),
            method: 'post',
            success:(response)=>{
                if(response.status)
                {
                    $('#phone-modal').modal('hide')
                    $('#otpModal').modal('show')
                }
            }
        })
    })
    
    function remove() {
        document.getElementById('message').innerHTML = "";
    }
</script>
