            <div class="page-content">
            	{{#if products}}
                <div class="container">
					<table class="table table-wishlist table-mobile">
						<thead>
							<tr>
								<th>Product</th>
								<th>Price</th>
								<th>Stock Status</th>
								<th></th>
								<th></th>
							</tr>
						</thead>

						<tbody>
                            {{#each products}}
							<tr>
								<td class="product-col">
									<div class="product">
										<figure class="product-media">
											<a href="#">
												<img src="/pictures/productImages/{{this.product.image.[0]}}" alt="Product image">
											</a>
										</figure>

										<h3 class="product-title">
											<a href="#">{{this.product.title}}</a>
										</h3><!-- End .product-title -->
									</div><!-- End .product -->
								</td>
								<td class="price-col">{{this.product.price}}</td>
                                {{#if (stockOut this.product.stock)}}
								<td class="stock-col"><span class="text-danger">stock out</span></td>
                                {{else}}
                                <td class="stock-col"><span class="in-stock">In stock</span></td>
                                {{/if}}
                                {{#if (stockOut this.product.stock)}}
								<td class="action-col">
									<button class="btn btn-block btn-outline-danger-2"><i class="icon-cart-plus"></i>Stock Out</button>
								</td>
                                {{else}}
                                <td class="action-col">
									<button class="btn btn-block btn-outline-primary-2" onclick="moveToCart('{{this.item}}','{{this._id}}')" ><i class="icon-cart-plus"></i>Add to Cart</button>
								</td>
                                {{/if}}
								<td class="remove-col"><button class="btn-remove" onclick="removeProduct('{{this._id}}','{{this.product._id}}')"><i class="icon-close"></i></button></td>
							</tr>
                            {{/each}}
						</tbody>
					</table><!-- End .table table-wishlist -->
	            	<div class="wishlist-share">
	            		<div class="social-icons social-icons-sm mb-2">
	            			<label class="social-label">Share on:</label>
